<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Larger blue circle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <stroke
                android:width="20dp"
                android:color="@color/mapboxBlue" />
        </shape>
    </item>
    <!--  circle in middle -->
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <stroke
                android:width="40dp"
                android:color="@color/white" />
        </shape>
    </item>
    <!-- Smaller  circle at front -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="60dp"
                android:height="60dp" />
            <solid android:color="@color/mapboxBlue" />
        </shape>
    </item>
</layer-list>